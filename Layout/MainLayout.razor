@inherits LayoutComponentBase
@using MudBlazor
@using LifeRpg.Theme
@inject MudThemeProvider MudThemeProvider

<MudThemeProvider Theme="RpgTheme.Instance" />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => _drawerOpen = !_drawerOpen)" />
        <MudText Typo="Typo.h5" Class="ml-4">LifeRPG</MudText>
        <MudSpacer />
        <MudButton Color="Color.Inherit">Login</MudButton>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" Class="d-flex justify-center align-center">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavLink Href="/dashboard" IconColor="Color.Tertiary" Icon="@Icons.Material.Filled.Analytics">Dashboard</MudNavLink>
            <MudNavLink Href="/quests" IconColor="Color.Error" Icon="@Icons.Material.Filled.AreaChart">Quests</MudNavLink>
            <MudNavLink Href="/character" Icon="@Icons.Material.Filled.AccessibilityNew">Character</MudNavLink>
            <MudNavLink Href="/rewards" IconColor="Color.Warning" Icon="@Icons.Material.Filled.AutoAwesome">Rewards</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
}
